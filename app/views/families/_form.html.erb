<%= simple_form_for(@family) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
    <%= f.input :name %>
    <%= f.collection_select :category, Category.all, :id, :name, :selected => @family.category.id %>
    <%= f.input :unique_id %>
    <%= f.input :workplane_based, as: :boolean %>
    <%= f.input :room_calculation_point, as: :boolean %>
    <%= f.input :shared, as: :boolean %>
    <%= f.input :always_vertical, as: :boolean %>
    <%= f.input :round_dimension %>
    <%= f.input :fitting_type %>
</div>

<div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
    <%= link_to 'Back', families_path, class: "btn btn-primary" %>
</div>
<% end %>
